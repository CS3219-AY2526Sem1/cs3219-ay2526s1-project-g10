generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define difficulty enum
enum Difficulty {
  EASY
  MEDIUM
  HARD
}

// Define Question model
model Question {
  id                 Int        @id @default(autoincrement())
  title              String
  description        String
  descriptionImages  String[]  @default([])  // optional
  constraints        String[]  @default([])  // optional
  examples           Json?                  // optional
  solution           String
  difficulty         Difficulty
  language           String?                // optional
  topic              String
  followUp           String?                // optional
  createdAt          DateTime @default(now())
}

